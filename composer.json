{
    "name": "iq2i/tailwind-cs-fixer",
    "type": "library",
    "description": "A tool to automatically sort Tailwind CSS classes in HTML and Twig files",
    "homepage": "https://github.com/IQ2i/tailwind-cs-fixer",
    "license": "MIT",
    "authors": [
        {
            "name": "Lo√Øc Sapone",
            "email": "loic@sapone.fr",
            "homepage": "https://loic-sapone.fr"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/console": "^6.4|^7.0|^8.0",
        "symfony/finder": "^6.4|^7.0|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.90",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "TailwindCsFixer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TailwindCsFixer\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/tailwind-cs-fixer"
    ]
}
