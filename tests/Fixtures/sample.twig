{% extends "base.html.twig" %}

{% block content %}
    <div class="flex justify-between items-center p-6 bg-white shadow-lg">
        <h1 class="text-xl font-bold {{ titleClass }}">{{ title }}</h1>
        <nav>
            <a href="#" class="hover:text-blue-700 text-blue-500 px-2">Home</a>
            <a href="#" class="hover:text-blue-700 text-blue-500 px-2">About</a>
